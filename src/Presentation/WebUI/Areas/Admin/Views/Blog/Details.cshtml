@model BlogPost
@{
    ViewData["Title"] = "Details";
}

<div class="page-header">
    <div class="row align-items-end">
        <div class="col-lg-8">
            <div class="page-header-title">
                <div class="d-inline">
                    <h4>Paylaşımlar</h4>
                    <span>
                        Paylaşımımların idarə edilməsi
                    </span>
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="page-header-breadcrumb">
                <ul class="breadcrumb-title">
                    <li class="breadcrumb-item" style="float: left;">
                        <a asp-controller="dashboard" asp-action="index">
                            <i class="feather icon-home"></i>
                        </a>
                    </li>
                    <li class="breadcrumb-item" style="float: left;">
                        <a asp-action="index">Paylaşımlar</a>
                    </li>
                    <li class="breadcrumb-item" style="float: left;">
                        Mövcud paylaşıma baxış
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>
<div class="page-body">
    <div class="card">
        <div class="card-block">
            <h4 class="sub-title">Mövcud paylaşıma baxış</h4>
            <div class="row">
                <div class="form-group col-12">
                    <label class="control-label">Title</label>
                    <p class="form-control">@Model.Title</p>
                </div>
                <div class="form-group col-12">
                    <label class="control-label">Category</label>
                    <p class="form-control">@Model.CategoryName</p>
                </div>
                <div class="form-group col-12">
                    <label class="control-label">
                        Body
                    </label>
                    <div>
                        @Html.Raw(Model.Body)
                    </div>
                </div>
                <div class="form-group col-12">
                    <label class="control-label">
                        Image
                    </label>

                    <img width="250" src="@Model.Image" />
                </div>
            </div>
            <div class="row">
                <div class="form-group col-12 text-right">
                    <a class="btn btn-info" asp-action="index">Back</a>
                    <a class="btn btn-warning" asp-action="edit" asp-route-id="@Model.Id">Edit</a>
                </div>
            </div>
        </div>
    </div>
</div>
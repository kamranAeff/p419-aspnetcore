@model ProductDetail
@{
    ViewData["Title"] = "Create";
}

<div class="page-header">
    <div class="row align-items-end">
        <div class="col-lg-8">
            <div class="page-header-title">
                <div class="d-inline">
                    <h4>Paylaşımlar</h4>
                    <span>
                        Paylaşımımların idarə edilməsi
                    </span>
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="page-header-breadcrumb">
                <ul class="breadcrumb-title">
                    <li class="breadcrumb-item" style="float: left;">
                        <a asp-controller="dashboard" asp-action="index">
                            <i class="feather icon-home"></i>
                        </a>
                    </li>
                    <li class="breadcrumb-item" style="float: left;">
                        <a asp-action="index">Paylaşımlar</a>
                    </li>
                    <li class="breadcrumb-item" style="float: left;">
                        Mövcud paylaşıma baxış
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>
<div class="page-body">
    <div class="card">
        <div class="card-block">
            <h4 class="sub-title">Mövcud paylaşıma baxış</h4>
            <div class="row">
                <div class="col-6">
                    <div class="row">
                        <div class="form-group col-6">
                            <label asp-for="Title" class="control-label">
                                Title
                            </label>
                            <p class="form-control">@Model.Title</p>
                        </div>
                        <div class="form-group col-6">
                            <label asp-for="CategoryId" class="control-label">
                                Category
                            </label>
                            <p class="form-control">@Model.CategoryName</p>
                        </div>
                        <div class="form-group col-6">
                            <label asp-for="BrandId" class="control-label">
                                Brand
                            </label>
                            <p class="form-control">@Model.BrandName</p>
                        </div>
                        <div class="form-group col-6">
                            <label asp-for="UnitOfWeight" class="control-label">
                                Unit
                            </label>
                            <p class="form-control">@Model.UnitOfWeight.ToString()</p>
                        </div>
                        <div class="form-group col-6">
                            <label asp-for="Weight" class="control-label">
                                Weight
                            </label>
                            <p class="form-control text-right">@Model.Weight?.ToString("0.00")</p>
                        </div>
                        <div class="form-group col-12">
                            <label asp-for="Information" class="control-label">
                                Information
                            </label>
                            <div class="form-control editor">@Html.Raw(Model.Information)</div>
                        </div>
                        <div class="form-group col-12">
                            <label asp-for="Description" class="control-label">
                                Description
                            </label>
                            <div class="form-control editor">@Html.Raw(Model.Description)</div>
                        </div>
                    </div>
                </div>
                <div class="col-6">
                    <div class="imager-container" id="viewer1">
                        @foreach (var item in Model.Images)
                        {
                            <label thumb-url='@item.TempPath' image-id="@item.Id" @(item.IsMain ? "checked=\"true\"" : "")></label>
                        }
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="form-group col-12 text-right">
                    <a class="btn btn-info" asp-action="index">Back</a>
                    <a class="btn btn-warning" asp-action="edit" asp-route-id="@Model.Id">Edit</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section addcss {
    <link href="~/lib/multiple-imager-js/css/imager.css" rel="stylesheet" />
}

@section addjs {
    <script src="~/lib/ckeditor5/ckeditor.min.js"></script>
    <script src="~/lib/multiple-imager-js/js/imager.js"></script>
    <script>
        window.addEventListener('load', function () {
            $('#viewer1').imgadd({
                tnWidth: '120px',
                tnHeight: '120px',
                fontSize: '55px',
                plusInnerHtml: '',
                plusBtnClass: undefined,
                readonly: true
            });
        });
    </script>
}
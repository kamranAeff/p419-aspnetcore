@model Size
@{
    ViewData["Title"] = "Create";
}

<div class="page-header">
    <div class="row align-items-end">
        <div class="col-lg-8">
            <div class="page-header-title">
                <div class="d-inline">
                    <h4>@Common.Sizes</h4>
                    <span>
                        @Common.Sizes in idarə edilməsi
                    </span>
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="page-header-breadcrumb">
                <ul class="breadcrumb-title">
                    <li class="breadcrumb-item" style="float: left;">
                        <a asp-controller="dashboard" asp-action="index">
                            <i class="feather icon-home"></i>
                        </a>
                    </li>
                    <li class="breadcrumb-item" style="float: left;">
                        <a asp-action="index">@Common.Sizes</a>
                    </li>
                    <li class="breadcrumb-item" style="float: left;">
                        Yeni rəng əlavə etmək
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>
<div class="page-body">
    <form class="card" method="post">
        <div class="card-block">
            <h4 class="sub-title">Yeni rəng əlavə etmək</h4>
            <div class="row">
                <div class="form-group col-12">
                    <label asp-for="Name" class="control-label">
                        Name
                    </label>
                    <input asp-for="Name" type="text" class="form-control" />
                </div>
                <div class="form-group col-12">
                    <label asp-for="SmallName" class="control-label">
                        SmallName
                    </label>
                    <input asp-for="SmallName" type="text" class="form-control" />
                </div>
            </div>
            <div class="row">
                <div class="form-group col-12 text-right">
                    <a class="btn btn-warning" asp-action="index">Back</a>
                    <button class="btn btn-success">Save</button>
                </div>
            </div>
        </div>
    </form>
</div>